<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Set a New Password</title>
    </head>
    <body>
        <referenceContainer name="content">
            <container name="customer.login.container" label="Customer Login Container" htmlTag="div" htmlClass="sign-in-out-container login-container">
                <block class="Magento\Customer\Block\Account\Resetpassword" name="resetPassword" template="Magento_Customer::form/resetforgottenpassword.phtml" cacheable="false"/>
            </container>
        </referenceContainer>
    </body>
</page>
