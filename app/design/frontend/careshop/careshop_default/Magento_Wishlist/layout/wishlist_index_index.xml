<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer.wishlist.item.name">
            <block class="Magento\Wishlist\Block\Customer\Wishlist\Item\Options"
                   name="item_options"
                   template="Magento_Wishlist::item/name/options.phtml"
            />
            <arguments>
                <argument name="brand_view_model" xsi:type="object">Careshop\RokanthemesBrand\ViewModel\Brand</argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="customer.wishlist.item.review" remove="true" />
        <referenceBlock name="customer.wishlist.item.edit" remove="true" />
        <referenceBlock name="customer.wishlist.item.cart" remove="true" />
        <referenceBlock name="customer.wishlist.item.comment" remove="true" />
        <referenceBlock name="customer.wishlist.item.options" remove="true" />
        <referenceContainer name="customer.wishlist.buttons" remove="true" />
    </body>
</page>
