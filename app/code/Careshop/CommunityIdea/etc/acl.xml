<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Careshop_CommunityIdea::community" title="Community" sortOrder="25">
                        <resource id="Careshop_CommunityIdea::idea" title="Ideas" sortOrder="10"/>
                        <resource id="Careshop_CommunityIdea::tag" title="Tags" sortOrder="20"/>
                        <resource id="Careshop_CommunityIdea::topic" title="Topics" sortOrder="30"/>
                        <resource id="Careshop_CommunityIdea::category" title="Categories" sortOrder="40"/>
                        <resource id="Careshop_CommunityIdea::author" title="Author Information" sortOrder="50"/>
                        <resource id="Careshop_CommunityIdea::comment" title="Manage Comments" sortOrder="60"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Careshop_CommunityIdea::configuration" title="Community"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
