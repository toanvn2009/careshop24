<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="Rokanthemes\Reviews\Block\Product\View\ListView" name="product.info.product_additional_dataa" as="product_additional_dataa" template="Rokanthemes_Reviews::product/view/list.phtml"/>
        <block class="Magento\Theme\Block\Html\Pager" name="product_reviews_list.toolbar">
            <arguments>
                <argument name="show_per_page" xsi:type="boolean">true</argument>
                <argument name="show_amounts" xsi:type="boolean">false</argument>
            </arguments>
        </block>
    </container>
</layout>
